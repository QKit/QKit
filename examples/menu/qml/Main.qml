import "QKit"

QKitApplication {
    QKitButton {
        id: button
        objectName: "Button"
        focus: true
        anchors.centerIn: parent
        width: 0.8 * Math.min(parent.width, parent.height)
        height: width / 3
        text: qsTr("Menu")
        onClicked: menu.open()
    }

    Menu {
        id: menu
        objectName: "Menu"
        anchors.fill: parent
        onClose: button.forceActiveFocus()
    }
}
